<p id="notice"><%= notice %></p>

<h1>Campaigns summary</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Score</th>
  </tr>
  </thead>

  <tbody>
  <% @campaigns.each do |campaign, score| %>
      <tr>
        <td><%= link_to campaign, details_path(campaign) %></td>
        <td><%= score %></td>
      </tr>
  <% end %>
  </tbody>
</table>